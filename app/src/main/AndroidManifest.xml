            android:label="@string/title_activity_my_create"
            android:theme="@style/Theme.OhSoonTaxiAndroid.NoActionBar" />
        <activity
            android:name=".ui.create.CreateActivity"
            android:exported="false" />
        <activity
            android:name=".ui.detail.PassphraseDialog"
            android:exported="false"
